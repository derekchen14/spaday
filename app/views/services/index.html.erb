<h1>Services</h1>
<table>
  <tr>
    <th>Service Name</th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.name %></td>
    <td><%= link_to "Edit", edit_service_path(service.id) %></td>
    <td><%= link_to "Remove", service, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

